[general]
accounts = diamondbond1
maxsyncaccounts = 1

[Account diamondbond1]
localrepository = diamondbond1-Local
remoterepository = diamondbond1-Remote
synclabels = yes

postsynchook = ~/.config/offlineimap/postsync.sh

[Repository diamondbond1-Local]
type = GmailMaildir
localfolders = ~/mail/diamondbond1

[Repository diamondbond1-Remote]
type = Gmail
remoteuser = diamondbond1@gmail.com
remotepass = PASSWORD

sslcacertfile = /etc/ssl/certs/ca-certificates.crt

folderfilter = lambda foldername: foldername in ['[Gmail]/All Mail']
nametrans = lambda foldername: re.sub('^\[Gmail\]/All Mail$', 'all',foldername)
